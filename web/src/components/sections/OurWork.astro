---
import OurWorkGrid from '../grids/OurWorkGrid.astro'
const { title, projects } = Astro.props
---

<section class="our-work-section">
	<div class="wrapper">
		<div class="title">
			<h2>{title.title}</h2>
			<p>{title.text}</p>
		</div>
		<OurWorkGrid projects={projects} />
	</div>
</section>

<style lang="scss">
	.our-work-section {
		.wrapper {
			.title {
				display: flex;
				align-items: flex-end;
				justify-content: space-between;
				p {
					color: $black;
					max-width: 50ch;
				}
			}
		}
		@media (max-width: 900px) {
			.wrapper {
				.title {
					flex-direction: column;
					align-items: flex-start;
					gap: 1.5rem;
				}
			}
		}
	}
</style>
