---
import { urlForImage } from '../../lib/urlForImage'
const { title, items } = Astro.props
---

<main>
	<div class="wrapper">
		<h1>{title}</h1>
		<div class="items">
			{
				items.map((item) => (
					<div class="item">
						<div class="left">
							<img src={urlForImage(item.before).format('webp').url()} alt={item.before.alt} />
							<div class="after" />
							<h3>Before</h3>
						</div>
						<div class="right">
							<img src={urlForImage(item.after).format('webp').url()} alt={item.after.alt} />
							<div class="after" />
							<h3>After</h3>
						</div>
					</div>
				))
			}
		</div>
	</div>
</main>

<script>
	import { gsap } from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'
	gsap.registerPlugin(ScrollTrigger)

	const allItems = document.querySelectorAll(
		'main .wrapper .item .left, main .wrapper .item .right'
	)

	allItems.forEach((item, index) => {
		const itemTimeline = gsap.timeline({
			scrollTrigger: {
				trigger: item,
				start: 'top 90%',
				toggleActions: 'play none none reverse'
			}
		})
		const image = item.querySelector('img')
		const imageAfter = item.querySelector('.after')
		itemTimeline
			.to(
				image,

				{
					clipPath: ' polygon(0 0, 99.9% 0, 99.9% 100%, 0% 100%)'
				},
				'-=0.1'
			)
			.to(
				imageAfter,
				{
					clipPath: ' polygon(0 0, 99.9% 0, 99.9% 100%, 0% 100%)',

					ease: 'power1.ease'
				},
				'-=0.5'
			)
			.to(imageAfter, {
				clipPath: ' polygon(100% 0, 100% 0, 100% 100%, 100% 100%)',

				ease: 'power1.ease'
			})
	})
</script>

<style lang="scss">
	main {
		.wrapper {
			padding-block: 10rem;
			h1 {
				color: $black;
				text-align: center;
			}
			.items {
				margin-block: 4rem 0;
				display: grid;
				row-gap: 4rem;
				.item {
					display: flex;
					align-items: center;
					gap: 4rem;

					.left {
						position: relative;
						h3 {
							color: $white;
							position: absolute;
							z-index: 1;
							bottom: 1.5rem;
							left: 1.5rem;
						}
						img {
							clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
						}
						.after {
							position: absolute;
							content: '';
							display: grid;
							width: 100%;
							height: 100%;
							background-color: $green;
							z-index: 10;
							inset: 0;
							clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);

							h2 {
								color: $white;
							}
						}
					}
					.right {
						position: relative;
						h3 {
							color: $white;
							position: absolute;
							z-index: 1;
							bottom: 1.5rem;
							left: 1.5rem;
						}
						img {
							clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
						}
						.after {
							position: absolute;
							content: '';
							display: grid;
							width: 100%;
							height: 100%;
							background-color: $green;
							z-index: 10;
							inset: 0;
							clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
							@keyframes clip-path-animation {
								0% {
									clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
								}
								50% {
									clip-path: polygon(0 0, 99.99% 0, 99.99% 100%, 0% 100%);
								}
								100% {
									clip-path: polygon(100% 0, 100% 0, 100% 100%, 100% 100%);
								}
							}
							&.animate {
								animation: clip-path-animation 600ms forwards ease-in-out;
							}

							h2 {
								color: $white;
							}
						}
					}
				}
			}
		}
	}
</style>
