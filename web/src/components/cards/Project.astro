---
const { name, description, image } = Astro.props
import { urlForImage } from '../../lib/urlForImage'
---

<div class="project">
	<img src={urlForImage(image).format('webp').url()} alt={image.alt} />
	<div class="content">
		<h3>{name}</h3>
		<p>{description}</p>
	</div>
</div>

<style lang="scss">
	.project {
		border: 0.25px solid $black;
		padding: 2rem;
		.content {
			display: flex;
			align-items: flex-start;
			margin-block: 1rem 0;
			justify-content: space-between;
			gap: 2rem;

			p {
				color: $black;
				max-width: 32ch;
			}
		}
		@media (max-width: 700px) {
			padding: 1rem;
		}
		@media (max-width: 370px) {
			.content {
				flex-direction: column;

				align-items: flex-start;
				gap: 1.5rem;
			}
		}
	}
</style>
